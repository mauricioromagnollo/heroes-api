{
  "name": "heroes-api",
  "version": "1.0.0",
  "description": "An open source Heroes API.",
  "author": "Maur√≠cio Romagnoli <x0n4d0>",
  "homepage": "https://github.com/x0n4d0/heroes-api#readme",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/x0n4d0/heroes-api"
  },
  "bugs": {
    "url": "https://github.com/x0n4d0/heroes-api/issues"
  },
  "keywords": [],
  "scripts": {
    "prepare": "husky install",
    "dev": "nodemon ./src",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest --colors --noStackTrace --passWithNoTests --runInBand",
    "test:staged": "npm test -- --findRelatedTests",
    "test:unit": "npm test -- -c jest.config.unit.mjs",
    "test:unit:watch": "npm test -- --watch -c jest.config.unit.mjs",
    "test:ci": "npm test -- --coverage",
    "test:coveralls": "npm run test:ci && coveralls < coverage/lcov.info"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "coveralls": "^3.1.1",
    "eslint": "^8.20.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.19"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "module-alias": "^2.2.2"
  },
  "_moduleAliases": {
    "@/test": "<rootDir>/test/*",
    "@/*": "<rootDir>/src/*"
  }
}
